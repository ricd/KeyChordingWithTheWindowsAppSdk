<Window x:Class="KeyChordingWithTheWindowsAppSdk.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid x:Name="_rootGrid"
		  KeyDown="OnRootGridKeyDown"
		  KeyUp="OnRootGridKeyUp"
		  PointerPressed="OnRootGridPointerPressed"
		  Background="DimGray">
		<TextBlock x:Name="_textBlock"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center" />
	</Grid>
</Window>
